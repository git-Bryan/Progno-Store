@using Microsoft.AspNet.Identity
@using Progno.Web.Models
@using Progno.Web.Models.Extension
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- META SECTION -->
    <title>@ViewBag.Title - Extreme</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link href="~/Content/freelancer.css" rel="stylesheet" />
    <link type="text/css" id="theme" href="~/Content/Render/css/theme-dark.css" rel="stylesheet" />
    <!-- EOF CSS INCLUDE -->
</head>
<body>
    <!-- START PAGE CONTAINER -->
    <div class="page-container">

        <!-- START PAGE SIDEBAR -->
        <div class="page-sidebar">
            <!-- START X-NAVIGATION -->
            <ul class="x-navigation">
                <li class="xn-logo">
                    <a href="index.html" style="color: white">EXTREME</a>
                    <a href="#" class="x-navigation-control"></a>
                </li>
                <li class="xn-profile">
                   
@*@if (User.Identity.IsAuthenticated && ViewBag.ImagefileUrl != null)
{
    <a href="#" class="profile-mini">
        <img src="@Url.Content(@ViewBag.ImagefileUrl)" class="img-rounded" alt="User Image">
    </a>

}
else
{
    <a href="#" class="profile-mini">
        <img src="~/Images/avatar.png" />
    </a>
}*@
                    
                    <div class="profile">
                        @if (User.Identity.IsAuthenticated && ViewBag.ImagefileUrl != null)
                        {
                           
                            <div class="profile-image">
                                <img src="@Url.Content(@ViewBag.ImagefileUrl)" >
                            </div>
                        }
                        else
                        {
                            <div class="profile-image">
                                <img src="~/Images/avatar.png" />
                            </div>

                        }
           
                        <div class="profile-data">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="profile-data-name"><i class="fa fa-circle text-green"></i> Online</div>

                            }
                            else
                            {
                                <div class="profile-data-title"><i class="fa fa-circle text-red"></i> Offline</div>

                            }
                        </div>

                        <div class="profile-data">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="profile-data-name">@User.Identity.Name</div>
                                 @*<div class="profile-data-name">Role: &nbsp; &nbsp;@ViewBag.Role</div>*@

                            }
                        </div>
                        <div class="profile-controls">
                            <a href="pages-profile.html" class="profile-control-left"><span class="fa fa-info"></span></a>
                            <a href="pages-messages.html" class="profile-control-right"><span class="fa fa-envelope"></span></a>
                        </div>
                    </div>
                </li>
                <li class="xn-title">Navigation</li>
                <li class="active">
                    <a href="index.html"><span class="fa fa-home"></span> <span class="xn-text">Home</span></a>
                </li>
                @if (User.IsInRole("GM"))
                {
                    <li class="xn-openable">
                        <a href="#" class="text-left"><span class="fa fa-desktop"></span> <span class="xn-text">General Manager</span></a>
                        <ul>
                            <li><a href="/Admin/Product/Reports"><span class="xn-text">Reports</span></a></li>
                            <li><a href="/Admin/Settings/Index"><span class="xn-text">Settings</span></a></li>
                            <li><a href="/Sales/Sales/Reservation"><span class="xn-text">Sign Expenses</span></a></li>

                        </ul>
                    </li>
                }
                @if (User.IsInRole("MD"))
                {
                    <li class="xn-openable">
                        <a href="#" class="text-left"><span class="fa fa-desktop"></span> <span class="xn-text">Managing Director</span></a>
                        <ul>
                            <li><a href="/Admin/Product/Reports"><span class="xn-text">Reports</span></a></li>
                            <li><a href="/Admin/Settings/Index"><span class="xn-text">Settings</span></a></li>
                            <li><a href="/Sales/Sales/Reservation"><span class="xn-text">Approve Expenses</span></a></li>

                        </ul>
                    </li>
                }
            @if (User.IsInRole("Admin"))
                        {
                <li class="xn-openable">
                    <a href="#" class="text-left"><span class="fa fa-desktop"></span> <span class="xn-text">Administrator</span></a>
                    <ul>
                        <li><a href="/Admin/Product/Reports"><span class="xn-text">Reports</span></a></li>
                        <li><a href="/Admin/Settings/Index"><span class="xn-text">Settings</span></a></li>

                    </ul>
                </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Bar") || User.IsInRole("MD") || User.IsInRole("GM"))
                        {
                            <li class="xn-openable">
                                <a href="#" class="text-left"><span class="fa fa-shopping-cart"></span> <span class="xn-text">Back Waiter&nbsp;(Bar Man)</span></a>
                                <ul>
                                    <li><a href="/Sales/Sales/CreateOrder"><span class="xn-text">Create Order</span></a></li>
                                    <li><a href="/Sales/Sales/CreateOrder"><span class="xn-text">Procure Order</span></a></li>
                                    <li><a href="/Sales/Sales/CreateOrder"><span class="xn-text">Update Sales Payment</span></a></li>
                                    <li><a href="/Sales/Sales/Reservation"><span class="xn-text">Bar Stock Report</span></a></li>

                                    <li><a href="/Sales/Sales/Reservation"><span class="xn-text">Manage Reservation</span></a></li>

                                </ul>
                            </li>
                        }
                @if (User.IsInRole("Admin") || User.IsInRole("Waiter") || User.IsInRole("MD") || User.IsInRole("GM"))
                {
                    <li class="xn-openable">
                        <a href="#" class="text-left"><span class="fa fa-shopping-cart"></span> <span class="xn-text">Front Waiter</span></a>
                        <ul>
                            <li><a href="/Sales/Sales/CreateOrder"><span class="xn-text">Create Order</span></a></li>
                            <li><a href="/Sales/Sales/CreateOrder"><span class="xn-text">Update Sales Payment</span></a></li>

                        </ul>
                    </li>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Account") || User.IsInRole("MD") || User.IsInRole("GM"))
                {
                    <li class="xn-openable">
                        <a href="#" class="text-left"><span class="fa fa-money"></span> <span class="xn-text">Accountant</span></a>
                        <ul>
                            <li><a href="/Admin/Accountant/Index"><span class="xn-text">Pay Roll</span></a></li>
                            <li><a href="/Sales/Sales/Payment"><span class="xn-text">Acquisition</span></a></li>
                            <li><a href="/Sales/Sales/Payment"><span class="xn-text">Sales Log</span></a></li>
                            <li><a href="/Sales/Sales/Reservation"><span class="xn-text">Expenses</span></a></li>
                            <li><a href="/Sales/Sales/Payment"><span class="xn-text">Update Payment</span></a></li>
                            <li><a href="/Sales/Sales/Reservation"><span class="xn-text">Profit and Loss</span></a></li>

                        </ul>
                    </li>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Store") || User.IsInRole("MD") || User.IsInRole("GM"))
                {
                    <li class="xn-openable">
                        <a href="#" class="text-left"><span class="fa fa-building"></span> <span class="xn-text">Store Keeper</span></a>
                        <ul>
                            <li><a href="/Admin/Product/AddProduct"><span class="xn-text">Add New Product</span></a></li>
                            <li><a href="/Admin/Product/EditProductPage"><span class="xn-text">Edit Product</span></a></li>
                            <li><a href="/Admin/Product/StockProduct"><span class="xn-text">Stock Product</span></a></li>
                            <li><a href="/Admin/Product/AddProduct"><span class="xn-text">Manage Suppliers</span></a></li>
                            <li><a href="/Admin/Product/EditProductPage"><span class="xn-text">Stock Report</span></a></li>
                            <li><a href="/Admin/Product/StockProduct"><span class="xn-text">Update Stock</span></a></li>

                        </ul>
                    </li>
                }
            </ul>
            <!-- END X-NAVIGATION -->
        </div>
        <!-- END PAGE SIDEBAR -->
        <!-- PAGE CONTENT -->
        <div class="page-content">

            <!-- START X-NAVIGATION VERTICAL -->
            <ul class="x-navigation x-navigation-horizontal x-navigation-panel">
                <!-- TOGGLE NAVIGATION -->
                <li class="xn-icon-button">
                    <a href="#" class="x-navigation-minimize"><span class="fa fa-dedent"></span></a>
                </li>
                <!-- END TOGGLE NAVIGATION -->
                <!-- SEARCH -->
                <li class="xn-search">
                    <form role="form">
                        <input type="text" name="search" placeholder="Search..." />
                    </form>
                </li>
                <!-- END SEARCH -->
                <!-- SIGN OUT -->
                <li class="xn-icon-button pull-right">
                    <a href="/Security/Account/LogOff" class="mb-control" data-box="#mb-signout"><span class="fa fa-sign-out"></span></a>
                </li>
                <!-- END SIGN OUT -->
               
                <!-- MESSAGES -->
                <!-- END MESSAGES -->
                <!-- TASKS -->
                <!-- END TASKS -->
            </ul>
            <!-- END X-NAVIGATION VERTICAL -->
            <!-- START BREADCRUMB -->
            <ul class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Dashboard</li>
            </ul>
            <!-- END BREADCRUMB -->
            <!-- PAGE CONTENT WRAPPER -->
            <div class="">
                @RenderBody()
                <hr />
              

                <footer class="footer footer-above">
                    <div class="row">
                        <center class="col-md-10 col-md-offset-1 text-black">
                            &copy; @DateTime.Now.Year - Extreme Lounge &amp; Sports Bar
                            <p class="pull-right text-black"> Powered by <img class="image" style="height: 50px; width: 80px" src="~/Images/lloydant.jpeg" /></p>


                        </center>


                    </div>

                </footer>

            </div>
            <!-- END PAGE CONTENT WRAPPER -->
        </div>
        <!-- END PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTAINER -->
    <!-- MESSAGE BOX-->
    <div class="message-box animated fadeIn" data-sound="alert" id="mb-signout">
        <div class="mb-container">
            <div class="mb-middle">
                <div class="mb-title"><span class="fa fa-sign-out"></span> Log <strong>Out</strong> ?</div>
                <div class="mb-content">
                    <p>Are you sure you want to log out?</p>
                </div>
                <div class="mb-footer">
                    <div class="pull-right">
                        <a href="/Security/Account/LogOff" class="btn btn-success btn-lg">Yes</a>
                        <button class="btn btn-default btn-lg mb-control-close">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MESSAGE BOX-->
    <!-- START PRELOADS -->
    <audio id="audio-alert" src="~/Content/Render/audio/alert.mp3" preload="auto"></audio>
    <audio id="audio-fail" src="~/Content/Render/audio/fail.mp3" preload="auto"></audio>
    <!-- END PRELOADS -->
    <!-- START SCRIPTS -->
    <!-- START PLUGINS -->
<script type="text/javascript" src="~/Content/Render/js/plugins/jquery/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/jquery/jquery.min.js"></script>

    <script type="text/javascript" src="~/Content/Render/js/plugins/bootstrap/bootstrap.min.js"></script>
    <!-- END PLUGINS -->
    <!-- START THIS PAGE PLUGINS-->
    <script type="text/javascript" src="~/Content/Render/js/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/jquery/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/bootstrap/bootstrap.min.js"></script>
    <!-- END PLUGINS -->
    <!-- START THIS PAGE PLUGINS-->
    <script type='text/javascript' src='~/Content/Render/js/plugins/icheck/icheck.min.js'></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/scrolltotop/scrolltopcontrol.js"></script>

    <script type="text/javascript" src="~/Content/Render/js/plugins/morris/raphael-min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/morris/morris.min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/rickshaw/d3.v3.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/rickshaw/rickshaw.min.js"></script>
    <script type='text/javascript' src='~/Content/Render/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js'></script>
    <script type='text/javascript' src='~/Content/Render/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js'></script>
    <script type='text/javascript' src='~/Content/Render/js/plugins/bootstrap/bootstrap-datepicker.js'></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/owl/owl.carousel.min.js"></script>

    <script type="text/javascript" src="~/Content/Render/js/plugins/moment.min.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- END THIS PAGE PLUGINS-->
    <!-- START TEMPLATE -->

    <script type="text/javascript" src="~/Content/Render/js/plugins.js"></script>
    <script type="text/javascript" src="~/Content/Render/js/actions.js"></script>
    @*<script type="text/javascript" src="~/Content/Render/js/settings.js"></script>*@

    <script type="text/javascript" src="~/Content/Render/js/demo_charts_morris.js"></script>
    <!-- END TEMPLATE -->
<!-- END SCRIPTS -->

</body>
</html>



