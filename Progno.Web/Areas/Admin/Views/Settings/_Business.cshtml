@model Progno.Web.Areas.Admin.ViewModel.SettingsViewModel
           
<div class="row">
    @using (Html.BeginForm("BusinessSetUp", "Settings", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="col-md-10 col-md-offset-1 ">
            <div class="panel panel-info">
                <div class="panel-heading h2">Add Company Detail</div>
                <div class="panel-body">
                    @if (TempData["Message"] != null)
                    {
                        @Html.Partial("_Message", (Progno.Model.Model.Message)TempData["Message"])
                    }
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="col-md-3 control-label">@Html.LabelFor(model => model.Business.Name)</label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                        @Html.EditorFor(model => model.Business.Name, new { htmlAttributes = new { @class = "form-control span7", @required = "required", } })
                                        @Html.ValidationMessageFor(model => model.Business.Name, null, new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                   
                    <br />
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Company Logo</label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <input type="file" title="Upload Image" id="file" name="file" onchange="show(this)" class="form-control" />
                                        <img id="user_img" height="100" width="100" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>
                <div class="panel-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i>
                        Submit
                    </button>
                </div>

            </div>
        </div>
    }
</div>


