@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @*<title>@ViewBag.Title </title>*@
    <title>@ViewBag.Title -Astrum Energy </title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="page-top">

    <nav class="navbar navbar-default navbar-fixed-top" style="background: lightseagreen;padding-bottom: 20px">

        <div class="row">
            <div class="col-md-3 col-xs-12 col-sm-2">
                <div class="row">

                    <div class="col-xs-2">
                        <div class="navbar-header  ">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" style="float: right">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>

                        </div>
                    </div>
                </div>
            </div><div class="col-md-2 col-sm-3 hidden-xs">
            </div>


        </div>


        <div class="collapse navbar-collapse  " id="bs-example-navbar-collapse-1">
        </div>
           </nav>

    <div>

        <section id="about">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1" >
                        <br />
                        <div class="row">
                            <center>
                                <div class="col-sm-3 col-md-3 ">
                                    <div class="feature1">
                                        <a href="/Sales/Sales/CreateOrder">

                                            <img src="~/Images/Add-To-Cart.png" class="img-responsive  img-centered">
                                        </a>

                                    </div>

                                </div>
 
                            </center>

                           

                        </div>
                    </div>

                </div>
            </div>
        </section>
        <div class="row">
            <div class="col-md-2" style=" background: lightseagreen; height: 800px">
                <div>
                    <h3>
                        Welcome
                    </h3>
                    @if (User.IsInRole("Sales")) { 
                        <h4>
                            @User.Identity.Name
                        </h4>
                    }
                </div>
            </div>
            <div class="col-md-10">
                @RenderBody()

 
            </div>
        </div>

        <footer>
            <div class="footer-below navbar-fixed-bottom text-center">
                <div class="container">
                    <div class="row">
                    </div>

                    <div class="row">
                        <div class="col-lg-12 text-white">
                            <i style="font-style: normal;color: orange;font-size: 15px"> &copy;&nbsp;Store &nbsp;&nbsp;2012- @DateTime.Now.Year &nbsp; </i>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <div class="scroll-top   visible-lg visible-md visible-xs visible-sm">
            <a class="btn btn-primary" href="#page-top">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
        <div class="scroll-topa   hidden-lg hidden-md visible-xs hidden-sm">
            <p class="text-white text-cour dark_black-glass" style="border: 10px solid dodgerblue; border-radius: 10px;"><img class="img-tiny" src="~/images/Telephone_white.png" /> +2348178608125 <br /> <small style="font-size: 11.5px">info@astrumenergygroup.com</small>  </p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
