@model Progno.Web.Areas.Sales.ViewModel.SalesViewModel

@{
    ViewBag.Title = "ReservationAction";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    @using (Html.BeginForm("PaymentAction", "Sales", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="col-md-10 col-md-offset-1 ">
            <div class="panel panel-info">
                <div class="panel-heading h2">Reservation Info</div>
                <div class="panel-body">
                    <div class="panel-body">
                        @using (Html.BeginForm("MakeReservation", "HomePage", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div>
                                @if (TempData["Message"] != null)
                                {
                                    @Html.Partial("_Message", (Progno.Model.Model.Message)TempData["Message"])
                                }
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Customer.FirstName)</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.EditorFor(model => model.Customer.FirstName, new { htmlAttributes = new { @class = "form-control span7", @placeholder = "First Name", @required = "required", } })
                                                    @Html.ValidationMessageFor(model => model.Customer.FirstName, null, new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div><br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Customer.LastName)</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.EditorFor(model => model.Customer.LastName, new { htmlAttributes = new { @class = "form-control span7", @placeholder = "Last Name", @required = "required", } })
                                                    @Html.ValidationMessageFor(model => model.Customer.LastName, null, new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div><br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Customer.Email)</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.EditorFor(model => model.Customer.Email, new { htmlAttributes = new { @class = "form-control span7", @placeholder = "Email Address", @required = "required", } })
                                                    @Html.ValidationMessageFor(model => model.Customer.Email, null, new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div><br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Reservation.CheckIn)</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.EditorFor(model => model.Reservation.CheckIn, new { htmlAttributes = new { @class = "form-control datepicker", @placeholder = "Start date", @required = "required", } })
                                                    @Html.ValidationMessageFor(model => model.Reservation.CheckIn, null, new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div><br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Reservation.CheckOut)</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.EditorFor(model => model.Reservation.CheckOut, new { htmlAttributes = new { @class = "form-control span7", @placeholder = "End date", @required = "required", } })
                                                    @Html.ValidationMessageFor(model => model.Reservation.CheckOut, null, new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div><br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Reservation.ReservationType)</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.EditorFor(model => model.Reservation.ReservationType.Name, new { htmlAttributes = new { @class = "form-control span7", @placeholder = "End date", @required = "required", } })
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    @*<div class="form-group">
                                        @Html.LabelFor(model => model.Reservation.ReservationType, "ReservationType ", new { @class = "col-sm-12 control-label " })
                                        <div class="col-md-12">
                                            @Html.DropDownListFor(model => model.Reservation.ReservationType.Id, (IEnumerable<SelectListItem>) ViewBag.ReservationType, new {@class = "form-control", @placeholder = "Reservation Type", @id = "Product", @required = "required"})
                                            @Html.ValidationMessageFor(model => model.Reservation.ReservationType.Id, "", new {@class = "text-danger"})
                                        </div>

                                    </div>*@

                                </div><br />
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="col-md-12 control-label">@Html.LabelFor(model => model.Reservation.IsCheckedOut,"Is Checked")</label>
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                                    @Html.CheckBoxFor(model => model.Reservation.IsCheckedOut, new { htmlAttributes = new {  } })
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div><br />

                            </div>
    <div class="panel-footer">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save"></i>
            Submit
        </button>
    </div>

                        }


                    </div>
                </div>

            </div>
        </div>
    }
</div>
